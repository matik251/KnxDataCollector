@model IEnumerable<KnxDataCollector.Model.XmlFiles>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Xmldata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsProcessed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessingPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelegramsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CancellationToken)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Xmldata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsProcessed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessingPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelegramsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancellationToken)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Fid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Fid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Fid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
